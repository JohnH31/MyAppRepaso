<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu de repaso 1"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="45sp"
        />
    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_below="@+id/txtTitulo"
        android:src="@drawable/home"
        android:layout_centerInParent="true"
        android:layout_margin="20sp"
        />
    <Button
        android:id="@+id/btnSumar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="Actividad1 Suma"
        android:layout_below="@+id/imgHome"
        android:backgroundTint="#03A9F4"
        android:textColor="@android:color/black"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btnRestar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="Actividad2 Resta"
        android:layout_below="@+id/btnSumar"
        android:backgroundTint="#03A9F4"
        android:textColor="@android:color/black"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="Actividad3 Multiplicar"
        android:layout_below="@+id/btnRestar"
        android:backgroundTint="#03A9F4"
        android:textColor="@android:color/black"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btnDividir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="Actividad4 Dividir"
        android:layout_below="@+id/btnMultiplicar"
        android:backgroundTint="#03A9F4"
        android:textColor="@android:color/black"
        android:onClick="onClick"
        />

</RelativeLayout>